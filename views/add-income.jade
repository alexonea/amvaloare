- if (user)
	#add-income.modal.fade
		.modal-dialog
			.modal-content
				.modal-header
					button(type=button, data-dismiss='modal', aria-hidden='true').close &times;
					h4.modal-title Record a new income
				.modal-body
					form(method='post', action='/update/income', id='add-income-form', autocomplete='off')
						fieldset
							.form-group
								.input-group
									span.input-group-addon: small: span.glyphicon.glyphicon-screenshot
									input(type='text', name='endpoint', placeholder='Source').form-control
							.form-group
								.input-group
									span.input-group-addon: small
										- if (user.currency == '$')
											span.glyphicon.glyphicon-usd
										- if (user.currency == '€')
											span.glyphicon.glyphicon-euro
										- if (user.currency == '£')
											span.glyphicon.glyphicon-gbp
										- if (user.currency == 'RON')
											RON										
									input(type='text', name='value', placeholder='Value').form-control
							.form-group
								label(for='category') Choose a category for this transaction
								.input-group
									span.input-group-addon: small: span.glyphicon.glyphicon-tag
									select(name='category', id='category').form-control
										option(value='parents') Parents
										option(value='jobs') Jobs
										option(value='others') Others
							.form-group
								label(for='date') Choose the date of the transaction
								.input-group
									span.input-group-addon: small: span.glyphicon.glyphicon-calendar
									input(type='date', name='date', id='date').form-control.date-holder
							.form-group
								.checkbox
									label#recurring-label-income
										input(type='checkbox', name='recurring', id='recurring', value='off').pull-left
										| Is this transaction a recurring one?
							.form-group#recurring-options
								label This transaction will occur every:
								br
								select(name='frequency').form-control.inline
									option(value='1') 1
									option(value='2') 2
									option(value='3') 3
									option(value='4') 4
									option(value='5') 5
									option(value='6') 6
									option(value='7') 7
									option(value='8') 8
									option(value='9') 9
									option(value='10') 10
									option(value='11') 11
									option(value='12') 12
								select(name='unit').form-control.inline
									option(value='month') Month(s)
									option(value='week') Week(s)
									option(value='year') Year(s)
				.modal-footer
					.btn.btn-success#submit-income Save
					.btn.btn-default#close-income Close